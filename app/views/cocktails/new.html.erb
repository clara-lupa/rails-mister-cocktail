<header>   <%= link_to "All cocktails", cocktails_path, class: "btn btn-info" %></header>

<div class="container">

  <h1> Add a new cocktail</h1>

  <%= simple_form_for @cocktail do |f|%>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add", class: "btn btn-info" %>
  <% end %>

</div>
