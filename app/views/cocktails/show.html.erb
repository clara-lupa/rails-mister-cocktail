<header>   <%= link_to "All cocktails", cocktails_path, class: "btn btn-primary" %></header>

<div class="container">
  <h1> <%= @cocktail.name %> </h1>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li> <strong> <%= dose.ingredient.name.capitalize %>:</strong> <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </li>
    <% end %>
    <li>  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></li>

  </ul>
</div>
