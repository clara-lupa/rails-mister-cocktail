<header>   <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-info" %></header>

<div class="container">

  <h1>Cocktails</h1>

  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="
      <% if cocktail.photo.attached? %>
        background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url('<%= cl_image_path cocktail.photo.key, height: 180, width: 400, crop: :fill; %>')
      <% end %>">

        <div class="cocktail-name"><%= cocktail.name %></div>
        <%= link_to "Show recipe", cocktail_path(cocktail), class: "btn btn-info" %>
      </div>
    <% end %>

    <%= link_to new_cocktail_path do %>
      <div class="card-category">
        <div class="cocktail-name">Add new cocktail</div>
      </div>
    <% end %>
  </div>
</div>

</ul>
